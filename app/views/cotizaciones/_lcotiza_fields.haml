.fields 
  = f.hidden_field :_destroy 
  %table.sglea
    %tr
      %td.titg Cantidad
      %td.titg Personaje
      %td.titg Rol
      %td.titg Tiempo
      %td.titg Medios
      %td.titg País
      %td.titg Valor
      %td.titg Día Adicional + IVA
      %td.titg Día Viajado + IVA

    %tr
      %td.inp= f.text_field :cantidad , :size => 1
      %td.inp= manten f, :personaje, Mantenedor.personajes, 'Seleccione por favor'
      %td.inp= manten f, :rol, Mantenedor.roles, 'Seleccione por favor'
      %td.inp Dias:#{f.text_field :tdia, :size => 1} Meses:#{f.text_field :tmes , :size => 1} Años:#{f.text_field :tanno , :size => 1}
      %td.inp= f.text_field  :medios, :size => 10
      %td.inp= f.text_field  :pais, :size => 10
      %td.inp= f.text_field :valor , :size => 5
      %td.inp= f.text_field :diaadicional, :size => 5	
      %td.inp= f.text_field :diaviajado, :size => 5
      %td.inp= link_to_remove_fields "X", f if not form_disabled
     