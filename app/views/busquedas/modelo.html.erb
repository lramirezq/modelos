<form action="modelos">
<h2 class='titulo01'>Busqueda de Modelo</h2>
<table class='sglea'>
  <tr>
    <td class='tit'>Tipo Identificación</td>
    <td class='inp'>
	<%= select_tag "tipo_id", options_from_collection_for_select(Mantenedor.tipoidentificacions, "valor", "valor"), :include_blank => 'Seleccione...' %>
    </td>
    <td class='tit'>Nº Identificación</td>
    <td class='inp'><input id="numero_id" name="numero_id" onblur="upperCase(this)" size="30" type="text" /></td>
    <td class='tit'>Nombres</td>
    <td class='inp'><input id="nombres" name="nombres" onblur="upperCase(this)" size="30" type="text" /></td>
  </tr>
  <tr>
    <td class='tit'>Apellidos</td>
    <td class='inp'><input id="apellidos" name="apellidos" onblur="upperCase(this)" size="30" type="text" /></td>
    <td class='tit'>Sexo</td>
    <td class='inp'>
      <%= select_tag "sexo", options_from_collection_for_select(Mantenedor.tiposexos, "valor", "valor"), :include_blank => 'Seleccione...'%>
    </td>
    <td class='tit'>Fecha Nacimiento</td>
    <td class='inp'><%= date_select :fecha_nacimiento, :start_year => 1920, :end_year => Time.now.year%>
    </td>
  </tr>
  <tr>
    <td class='tit'>Nacionalidad</td>
    <td class='inp'><input id="nacionalidad" name="nacionalidad" onblur="upperCase(this)" size="30" type="text" /></td>
    <td class='tit'>Telefono Fijo</td>
    <td class='inp'><input id="telefono_fijo" name="telefono_fijo" onblur="upperCase(this)" size="30" type="text" /></td>
    <td class='tit'>Telefono Movil</td>
    <td class='inp'><input id="movil" name="movil" onblur="upperCase(this)" size="30" type="text" /></td>
  </tr>
  <tr>
    <td class='tit'>Dirección</td>
    <td class='inp'><input id="direccion" name="direccion" onblur="upperCase(this)" size="30" type="text" /></td>
    <td class='tit'>Comuna</td>
    <td class='inp'><input id="comuna" name="comuna" onblur="upperCase(this)" size="30" type="text" /></td>
    <td class='tit'>Ciudad</td>
    <td class='inp'><input id="ciudad" name="ciudad" onblur="upperCase(this)" size="30" type="text" /></td>
  </tr>
  <tr>
    <td class='tit'>Pais</td>
    <td class='inp'></td>
    <td class='tit'>Licencia de Conducir</td>
    <td class='inp'><input id="licencia" name="licencia" onblur="upperCase(this)" size="30" type="text" /></td>
    <tr>
      <td class='tit'>Agencia Madre</td>
      <td class='inp'>
      <td class='tit'>E-Mail</td>
      <td class='inp'><input id="email" name="email" onblur="upperCase(this)" size="35" type="text" /></td>
    </tr>
  </tr>
</table>

  <h2 class='titulo01'>Datos del Responsable</h2>
  <table class='sglea'>
    <tr>
      <td class='tit'>Tipo Id</td>
      <td class='inp'>
	<%= select_tag "tipo_id_responsable", options_from_collection_for_select(Mantenedor.tipoidentificacions, "valor", "valor"), :include_blank => 'Seleccione...' %>
        
      <td class='tit'>Nº Identificación</td>
      <td class='inp'><input id="numero_id_responsable" name="numero_id_responsable" onblur="upperCase(this)" size="30" type="text" /></td>
    </tr>
    <tr>
      <td class='tit'>Nombres</td>
      <td class='inp'><input id="nombres_responsable" name="nombres_responsable" onblur="upperCase(this)" size="30" type="text" /></td>
      <td class='tit'>Apellidos</td>
      <td class='inp'><input id="apellidos_responsable" name="apellidos_responsable" onblur="upperCase(this)" size="30" type="text" /></td>
    </tr>
  </table>
</div>

<br>
<h2 class='titulo01'>Caracteristicas del Modelo</h2>
<div class='field'>
        <table class='sglea'>
          <tr>
            <td class='tit'>Estatura</td>
            <td class='inp'><input id="estatura" name="estatura" onblur="upperCase(this)" size="16" type="text" /></td>
            <td class='tit'>Calzado</td>
            <td class='inp'><input id="calzado" name="calzado" onblur="upperCase(this)" size="16" type="text" /></td>
            <td class='tit'>Idiomas</td>
            <td class='inp'><input id="idiomas" name="idiomas" onblur="upperCase(this)" size="16" type="text" /></td>
          </tr>
          <tr>
            <td class='tit'>Talla de Pantalón</td>
            <td class='inp'><input id="tpantalon" name="tpantalon" onblur="upperCase(this)" size="16" type="text" /></td>
            <td class='tit'>Talla de Camisa</td>
            <td class='inp'>
              	<%= select_tag "tcamisa", options_from_collection_for_select(Mantenedor.tcamisa, "valor", "valor"), :include_blank => 'Seleccione...' %>
            </td>
            <td class='tit'>Busto</td>
            <td class='inp'><input id="busto" name="busto" onblur="upperCase(this)" size="16" type="text" /></td>
          </tr>
          <tr>
            <td class='tit'>Cintura</td>
            <td class='inp'><input id="cintura" name="cintura" onblur="upperCase(this)" size="16" type="text" /></td>
            <td class='tit'>Cadera</td>
            <td class='inp'><input id="cadera" name="cadera" onblur="upperCase(this)" size="16" type="text" /></td>
            <td class='tit'>Color de Ojos</td>
            <td class='inp'>
              	<%= select_tag "cojos", options_from_collection_for_select(Mantenedor.cojos, "valor", "valor"), :include_blank => 'Seleccione...' %>
            </td>
          </tr>
          <tr>
            <td class='tit'>Color de Cabello</td>
            <td class='inp'>
             <%= select_tag "ccabello", options_from_collection_for_select(Mantenedor.ccabello, "valor", "valor"), :include_blank => 'Seleccione...' %>
            </td>
            <td class='tit'>Largo de Cabello</td>
            <td class='inp'>
              <%= select_tag "lcabello", options_from_collection_for_select(Mantenedor.lcabello, "valor", "valor"), :include_blank => 'Seleccione...' %>
            </td>
            <td class='tit'>Etnia</td>
            <td class='inp'>
              <%= select_tag "etnia", options_from_collection_for_select(Mantenedor.etnia, "valor", "valor"), :include_blank => 'Seleccione...' %>
            </td>
          </tr>
          <tr>
            <td class='tit'>Mujer Hot?</td>
            <td class='inp'><input name="hot" type="hidden" value="0" /><input id="hot" name="hot" onblur="upperCase(this)" type="checkbox" value="1" /></td>

            <td class='tit'>Hobbie / Deporte</td>
            <td class='inp'><input id="hobbie" name="hobbie" onblur="upperCase(this)" size="16" type="text" /></td>
            <td class='tit'>Medida Cuello</td>
            <td class='inp'><input id="mcuello" name="mcuello" onblur="upperCase(this)" size="16" type="text" /></td>
          </tr>
          <tr>
            <td class='tit'>Terno</td>
            <td class='inp'><input id="terno" name="terno" onblur="upperCase(this)" size="16" type="text" /></td>
            <td class='tit'>Realiza Desfiles?</td>
            <td class='inp'><input name="desfile" type="hidden" value="0" /><input id="desfile" name="desfile" onblur="upperCase(this)" type="checkbox" value="1" /></td>
            <td class='tit'>Tiene Dientes?</td>
            <td class='inp'><input name="dientes" type="hidden" value="0" /><input id="dientes" name="dientes" onblur="upperCase(this)" type="checkbox" value="1" /></td>
          </tr>
          <tr>
            <td class='tit'>Actor?</td>
            <td class='inp'><input name="actor" type="hidden" value="0" /><input id="actor" name="actor" onblur="upperCase(this)" type="checkbox" value="1" /></td>
            <td class='tit'>Usa Frenillos?</td>
            <td class='inp'><input name="frenillos" type="hidden" value="0" /><input id="frenillos" name="frenillos" onblur="upperCase(this)" type="checkbox" value="1" /></td>
            <td class='tit'>Tiene Experiencia como modelo?</td>
            <td class='inp'><input name="experiencia" type="hidden" value="0" /><input id="experiencia" name="experiencia" onblur="upperCase(this)" type="checkbox" value="1" /></td>
          </tr>
        </table>
      </div>
</div>
<br>
   <input type="submit">
</form>

<h2> Resultados Aca </h2>

<table class='sglea datos'>
      <tr>
        <td class='titg'>Foto</td>
        <td class='titg'>Nombres</td>
        <td class='titg'>Apellidos</td>
        <td class='titg'>Direccion</td>
        <td class='titg'>Comuna</td>
        <td class='titg'>Ver</td>
        <td class='titg'>Editar</td>
        <td class='titg'>Eliminar</td>
      </tr>
	<% @modelos.each do |modelo| %>
	  <tr>
	    <td><%= image_tag(modelo.image.url.to_s, :width => 100) %></td>
	    <td><%= modelo.nombres %></td>
	    <td><%= modelo.apellidos %></td>
	    <td><%= modelo.direccion %></td>
	    <td><%= modelo.comuna %></td>
	    <td><%= link_to image_tag("ver.png"), modelo%></td>
	    <td><%= link_to image_tag("editar.png"), edit_modelo_path(modelo) %></td>
	    <td><%= link_to image_tag("eliminar.png"), modelo, :confirm => '¿Está Seguro?', :method => :delete %></td>
	  </tr>
	<% end %>
    </table>


	