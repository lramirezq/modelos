.fields
  = f.hidden_field :_destroy 
  %table.sglea.noborder
    %tr
      %td.tit Descripción
      %td.inp= f.text_field :descripcion, :onblur => "upperCase(this)"
      %td.tit Teléfono
      %td.inp= f.text_field :telefono, :onblur => "upperCase(this)"
      %td.inp= link_to_remove_fields "Eliminar", f if not form_disabled