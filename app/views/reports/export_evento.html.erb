  </tr>
  <tr>
    <td>Tipo Identificación </td>
    <td><%=victima.tipoidentificacion%></td>
    <td>N° Identificación</td>
    <td><%=victima.rut%></td>
    <td>Nombres</td>
    <td><%=victima.nombres%></td>
    <td>Apellidos</td>
    <td><%=victima.apellidos%></td>
  </tr>
  <tr>
    <td>Sexo </td>
    <td><%=victima.sexo%></td>
    <td>Cargo</td>
    <td><%=victima.cargo%></td>
    <td>Edad</td>
    <td><%=victima.edad%></td>
    <td>Telefono</td>
    <td><%=victima.telefono%></td>
  </tr>
  <tr>
    <td>E-mail </td>
    <td><%=victima.email%></td>
    <td>Adicional</td>
    <td><%=victima.otros%></td>
    <td>Dirección</td>
    <td><%=victima.direccion%></td>
    <td>Región</td>
    <td><%=victima.region%></td>
    <td>Comuna</td>
    <td><%=victima.comuna%></td>
  </tr>  
<%end%>

