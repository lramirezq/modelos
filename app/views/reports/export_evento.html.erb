<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<table border="1">
<% @eventos.each do |evento| %>
<tr bgcolor="#cccccc">
<td><b>Código de Evento</b></td>
<td><b><%=evento.codigoEvento %></b></td>
</tr>
<tr>
  <td>Línea</td>
  <td><%=evento.linea %></td>
  <td>Estación</td>
  <td><%=evento.estacion%></td>
  <td>Fecha Ocurrencia</td>
  <td><%=evento.fechaOcurrencia%></td>
  <td>Fecha Registro</td>
  <td><%=evento.created_at%></td>
</tr>
<tr>
  <td>Usuario Ingreso</td>
  <td><%=evento.rutCreador %></td>
  <td>Estado</td>
  <td><%=evento.estado%></td>
  <td>Detenidos?</td>
  <td><%=evento.detenido==true ? "SI" : "NO"%></td>
  <td>Denunciados</td>
  <td><%=evento.denunciados==true ? "SI" : "NO"%></td>
</tr>
<tr>
  <td>Procece Policia?</td>
  <td><%=evento.procedepolicia==true ? "SI" : "NO" %></td>
  <td>Tiempo Respuesta Policia</td>
  <td><%=evento.minTmpoRespuesta%></td>
  <td>Fecha Validación?</td>
  <td><%=evento.fechaValidacion%></td>
  <td>Usuario Validador</td>
  <td><%=evento.rutValidador%></td>
</tr>
<tr>
  <td>Especie</td>
  <td><%=evento.especie %></td>
  <td>Lugar de Ocurrencia</td>
  <td><%=evento.lugarOcurrencia%></td>
  <td>Delito</td>
  <td><%=evento.delitoPrincipal%></td>
  <td>Valor Especie</td>
  <td><%=evento.valorEspecie%></td>
</tr>
<tr>
  <td>Descripción de Hechos</td>
  <td><%=evento.descripcionHechos %></td>
