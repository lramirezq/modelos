    <td><%=testigo.email%></td>
    <td>Adicional</td>
    <td><%=testigo.adicional%></td>
    <td>Dirección</td>
    <td><%=testigo.direccion%></td>
    <td>Región</td>
    <td><%=testigo.region%></td>
    <td>Comuna</td>
    <td><%=testigo.comuna%></td>
  </tr>  
<%end%>
<%end%>



</table>
